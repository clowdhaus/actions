{
  "name": "actions",
  "version": "0.0.0",
  "description": "Collection of :octocat: GitHub actions",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clowdhaus/actions.git"
  },
  "keywords": [
    "github",
    "actions"
  ],
  "author": "Clowd Haus, LLC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/clowdhaus/actions/issues"
  },
  "homepage": "https://github.com/clowdhaus/actions#readme",
  "private": true,
  "workspaces": [
    "pr-title"
  ],
  "scripts": {
    "build": "lerna run build && lerna run compile",
    "lint": "lerna run lint",
    "release": "lerna version --conventional-commits --create-release github --yes"
  },
  "dependencies": {
    "@actions/core": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/node": "^16.4.12",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "@vercel/ncc": "^0.29.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "prettier-plugin-package": "^1.3.0",
    "typescript": "^4.3.5"
  },
  "command": {
    "version": {
      "allowBranch": "main"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-rebase": "HUSKY_SKIP_HOOKS=1"
    }
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --fix"
    ],
    "*.md": [
      "prettier --single-quote --write"
    ],
    "*package.json": [
      "prettier --write --plugin=prettier-plugin-package"
    ]
  }
}
